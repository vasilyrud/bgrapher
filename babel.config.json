{
    "presets": [
        ["@babel/preset-react"],
        ["@babel/preset-env", {
            "modules": "auto",
            "targets": {
                "esmodules": true
            }
        }]
    ],
    "env": {
        "test": {
            "plugins": [
                ["module-resolver", {
                    "root": ["./src"]
                }],
                ["babel-plugin-rewire"]
            ]
        }
    }
}
